set autoindent " auto indent
set expandtab " use spaces for tab/indent
set smarttab  " use spaces for tab/indent
set shiftwidth=4  " use 4 spaces for a tab
set softtabstop=4 " use 4 spaces for a tab

set mouse=a " enable mouse support
set number  " use line number

set hlsearch " highlight search results

set backup                  " backup work
set backupdir=~/.vim/backup " save all backups in one place
